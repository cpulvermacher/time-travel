{
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "typescript.format.semicolons": "remove",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.formatOnSave": false
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    }
}
