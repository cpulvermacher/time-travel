{
    "env": {
        "browser": true,
        "es2016": true,
        "webextensions": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/no-non-null-assertion": "off",
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ]
    }
}